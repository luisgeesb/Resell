<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easy.eightfivehundred.resell">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/r"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignInActivity"
            android:theme="@style/SignInTheme" />
        <activity android:name=".MainActivity" />
        <activity android:name=".MessagesActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".OffersActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".PostActivity2" />
        <activity android:name=".ViewPostActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BrandsActivity" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>